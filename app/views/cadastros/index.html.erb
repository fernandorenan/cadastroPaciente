<h1>Pacientes</h1>   

<div>
  <h3>Notificações: </h3>
  <h4><%="Estamos no mês #{Date.today.month}:" %></h4>
  <% @cadastros.each do |cadastro| %>
    <%if cadastro.birth.month == Date.today.month %>
      <h4><li><%= "Esse mês temos o aniversário de #{cadastro.name} dia #{cadastro.birth.day}." %></li></h4>
    <% end %>
  <% end %>
</div>
<hr>
<div id="cadastros">
  <table>
    <thead>
      <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Nascimento</th>
      <th>Objetivo</th>
      <th>Status</th>
    </thead>
    <tbody>
      <% @cadastros.each do |cadastro| %>
        <tr>
          <td><%= cadastro.name %></td>
          <td><%= cadastro.phone %></td>
          <td><%= cadastro.email %></td>
          <td><%= cadastro.birth&.strftime("%d/%m/%Y") %></td>
          <td><%= cadastro.goal %></td>
          <td><%= cadastro.status %></td>
          <td><%= link_to "Show this cadastro", cadastro %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Novo cadastro", new_cadastro_path %>
